<!DOCTYPE html>
<html lang="en" class="h-full light" data-theme="true">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - metronic_tailwind_aspnet_core</title>
    <script type="importmap"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="assets/vendors/keenicons/styles.bundle.css" />
    <link rel="stylesheet" href="assets/css/styles.css" />
    <link rel="icon" type="image/png" href="favicon.ico" />
</head>
<body class="antialiased flex h-full text-base text-foreground bg-background demo1 kt-sidebar-fixed kt-header-fixed">
<script>
    const defaultThemeMode = 'light'; // light|dark|system
    let themeMode;

    if (document.documentElement) {
        if (localStorage.getItem('theme')) {
            themeMode = localStorage.getItem('theme');
        } else if (document.documentElement.hasAttribute('data-theme-mode')) {
            themeMode = document.documentElement.getAttribute('data-theme-mode');
        } else {
            themeMode = defaultThemeMode;
        }

        if (themeMode === 'system') {
            themeMode = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        document.documentElement.classList.add(themeMode);
    }
</script>
<div class="flex grow">
    <partial name="~/Views/Shared/Layouts/Default/Sidebar.cshtml"/>
    <div class="kt-wrapper flex grow flex-col">
        <partial name="~/Views/Shared/Layouts/Default/Header.cshtml"/>
        <main class="grow pt-5" id="content" role="content">
            <div class="kt-container-fixed">
                @RenderBody()
            </div>
        </main>
        <partial name="~/Views/Shared/Layouts/Default/Footer.cshtml"/>
    </div>
    <partial name="~/Views/Shared/Layouts/Default/SearchModal.cshtml"/>
</div>
<script src="assets/js/core.bundle.js"></script>
<script src="assets/vendors/ktui/ktui.min.js"></script>
<script src="assets/js/layouts/demo1.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
